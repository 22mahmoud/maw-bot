{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },

  "include": ["src", "types.d.ts"],
  "exclude": ["node_modules"]
}
